<% layout('layouts/boilerplate') -%>
 

 <div class="jumbotron rounded-0 bg-dark text-light mb-0">
   <div class="container">
     <h1>Trav<span class='text-danger'>elp</span></h1>
     <h5>Spend less , travel more ...</h5>
     <p>Perfect place for travellers to find free or affordable travel ware.</p>
   </div>
 </div>

<% include ../partials/paginate %>

<div class="container my-3">
 <div class="row justify-content-center">
  <% posts.docs.forEach(function(post){ %>
  <div class="col-lg-3 my-3">
   <div class="card">
    <h5 class="text-center mt-2"><%= post.title %></h5>
    <% if(post.images.length){ %>
      <img style="height : 14rem" src="<%= post.images[0].url %>">
    <% }else{ %>
       <img style="height : 14rem" src="https://images.unsplash.com/photo-1504198458649-3128b932f49e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60">
    <% } %>
    
    <p class="mt-2 pl-2">Price : <%= post.price %> $</p>
    <a class="btn btn-info btn-sm" href="/posts/<%= post._id %>">Show Details</a>
   </div>
  </div>
  <% }) %>
 </div>
</div>

 
 <% include ../partials/paginate %>