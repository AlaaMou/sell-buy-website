<% layout('layouts/boilerplate') -%>


<div class="container mt-5">
    
<h1 class="my-5">Reset Password</h1>

<form action="/reset/<%= token %>?_method=PUT" method="POST">
    
  <div class="form-group w-50">
    <label for="password">New Password</label>
    <input type="password" class='form-control' name="password" id="password" placeholder="New password" autofocus>
  </div>
  
  <div class="form-group w-50"> 
    <label for="confirm">Confirm Password</label>
    <input type="password" class='form-control' name="confirm" id="confirm" placeholder="Confirm password">
  </div>
  
  <div class="form-group">
    <input type="submit" value="Update Password" class="btn btn-sm btn-info">
  </div>
</form>
</div>